---
layout: layouts/base.njk
pagination:
  data: collections.plotList
  size: 1
  alias: plot
permalink: "/plots/{{ plot | slug }}/index.html"
---
<section class="list">
  <header class="list-header">
    <p class="section-label">Plot</p>
    <h1>{{ plot }}</h1>
    <p class="lede">A running thread of notes and essays.</p>
    <img class="ornament" src="{{ '/assets/ornaments/rule.svg' | url }}" alt="" aria-hidden="true" />
  </header>
  <ol class="post-list">
    {% for item in collections.latestPosts | wherePlot(plot) %}
    <li>
      <a href="{{ item.url | url }}">{{ item.data.title }}</a>
      <span class="meta">{{ item.date | readableDate }}</span>
      <span class="meta">Â· {{ item.data.type | capitalize }}</span>
    </li>
    {% endfor %}
  </ol>
  <p class="meta"><a href="{{ '/plots/' | url }}{{ plot | slug }}/feed.xml">RSS for {{ plot }}</a></p>
</section>
