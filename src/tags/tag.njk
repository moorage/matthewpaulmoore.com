---
layout: layouts/base.njk
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slug }}/index.html"
---
<section class="list">
  <header class="list-header">
    <h1>{{ tag }}</h1>
    <img class="ornament" src="{{ '/assets/ornaments/rule.svg' | url }}" alt="" aria-hidden="true" />
  </header>
  <ol class="post-list">
    {% for item in collections[tag] | reverse %}
    <li>
      <span class="post-date">{{ item.date | monthYear }}</span>
      <div class="post-info">
        <a href="{{ item.url | url }}">{{ item.data.title }}</a>
        {% if item.data.subtitle %}<div class="post-subtitle">{{ item.data.subtitle }}</div>{% endif %}
      </div>
    </li>
    {% endfor %}
  </ol>
</section>
