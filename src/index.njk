---
layout: layouts/base.njk
title: Home
---
<section class="home-intro title-page" aria-label="Title page">
  <div class="title-page__frame">
    <p class="title-page__title">Musings on the</p>
    <h1 class="title-page__display">Autonomous Home</h1>
    <p class="title-page__subtitle">The future of domestic intelligence,  and other things.</p>
    <div class="title-page__star" aria-hidden="true">*</div>
    <p class="title-page__author">Matt Moore</p>
  </div>
</section>

<img class="ornament" src="{{ '/assets/ornaments/rule.svg' | url }}" alt="" aria-hidden="true" />

<section class="home-latest">
  <h2>Freshly inked</h2>
  <ol class="post-list">
    {% for item in collections.latestPosts %}
    {% if loop.index0 < 5 %}
    <li>
      <span class="post-date">{{ item.date | monthYear }}</span>
      <div class="post-info">
        <a href="{{ item.url | url }}">{{ item.data.title }}</a>
        {% if item.data.subtitle %}<div class="post-subtitle">{{ item.data.subtitle }}</div>{% endif %}
      </div>
    </li>
    {% endif %}
    {% endfor %}
  </ol>
  <p class="home-more">
    <a href="{{ '/notes/' | url }}">View all notes</a>
  </p>
</section>


{% if collections.featured and collections.featured.length %}
<section class="home-popular">
  <h2>Well-traveled paths</h2>
  <ol class="post-list">
    {% for item in collections.featured %}
    <li>
      <span class="post-date">{{ item.date | monthYear }}</span>
      <div class="post-info">
        <a href="{{ item.url | url }}">{{ item.data.title }}</a>
        {% if item.data.subtitle %}<div class="post-subtitle">{{ item.data.subtitle }}</div>{% endif %}
      </div>
    </li>
    {% endfor %}
  </ol>
</section>
{% endif %}
